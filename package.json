    "react-router-dom": "^6.8.1",
    "sass": "^1.57.1"
  },
  "devDependencies": {
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^3.0.0",
    "gh-pages": "^4.0.0",
    "i": "^0.3.7",
    "npm": "^9.4.2",
    "typescript": "^4.9.3",
    "vite": "^4.0.0"
  }
}
